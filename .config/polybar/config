[module/i3]
type = internal/i3
format = <label-state> <label-mode>
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = false

label-mode = %mode%
label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %{F#fbf1c7}%icon%%{F-} %name%
label-focused-background = ${bar/primary.background}
label-focused-underline = #fbf1c7
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %{F#a89984}%icon%%{F-} %name%
label-unfocused-underline = #a89984
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %icon% %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = #d79921
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %{F#cc241d}%icon%%{F-} %name%
label-urgent-background = ${bar/primary.background}
label-urgent-underline = #cc241d
label-urgent-padding = 3

; ws-icon-[0-9]+ = label;icon
; ; NOTE: The label needs to match the name of the i3 workspace
ws-icon-0 = Internet;
ws-icon-1 = Tmux;
ws-icon-2 = IM;
ws-icon-3 = Files;
ws-icon-4 = Office;
ws-icon-5 = Media;
ws-icon-default = ♟

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
; Default: false
index-sort = true

; Create click handler used to focus workspace
; Default: true
enable-click = true

